<%= form_for @question, url: url do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@question.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong><%= f.label :'title:' %></strong>
    <%= f.text_field :question, class: 'form-control', required: true, minlength: 5 %>
  </div>
  
  <div class="form-group shadow-textarea">
    <strong><%= f.label :'description:' %></strong>
    <%= f.text_area :description, class: ['form-control', 'z-depth-1'], required: true, minlength: 10 %>
  </div>

  <div class="form-group">
    <%= f.submit class: ['btn', 'btn-primary'] %>
  </div>
<% end %>