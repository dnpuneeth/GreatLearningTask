<% upvote = 1 %>
<% downvote = -1 %>
<%= link_to user_question_comment_votes_path(comment_id: @votes.comment.id, votes: {vote: upvote}), method: :post do %>
  <%=image_tag("upvote.png", size: '40x40')%>
<% end%>
<%= @count.totalupvotes.cmt_id(@votes.comment.id).sum(:vote) %>
<%= link_to user_question_comment_votes_path(comment_id: @votes.comment.id, votes: {vote: downvote}), method: :post do %>
  <%=image_tag("downvote.png", size: '40x40')%>
<% end%>
<%= @count.totaldownvotes.cmt_id(@votes.comment.id).sum(:vote) %>
