<%= form_for @comment, url: user_question_comments_path(:question_id => @comment.question.id) do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.submit class: ['btn', 'btn-primary'] %>
  </div>
<% end %>